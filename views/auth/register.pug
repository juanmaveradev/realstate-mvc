extends ../layouts/index

block content
    div
        h1.text-5xl.my-10.font-extrabold.text-center Real
            span.font-normal State

        h2.text-center.text-4xl.font-extrabold=page

        div.mt-8.mx-auto.max-w-md.bg-white
            div.pb-8.px-4.pt-1.shadow
                    

                if errors 
                    div(class="max-w-md mx-auto my-10")
                        each error in errors
                            p(class= "bg-blue-600 text-white uppercase text-cs text-center text-sm p-2 mb-1 font-bold" style="background-color: rgb(220 38 38); border-radius: .4rem;")= error.msg

                form.space-y-4.flex.flex-col.align-center(method="POST" action="/auth/register" noValidate)
                    div.flex.flex-col.align-center
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="name") Name                   
                        input#name(class="py-2 border border-gray-300" type="text" name="name" value= user ? user.name : '' style="border-radius: .4rem;")
                    div.flex.flex-col.align-center
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Email
                        input#email(class=" py-2 border border-gray-300" type="email" name="email" value= user ? user.email : '' style="border-radius: .4rem;")
                    div.flex.flex-col.align-center
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Password
                        input#password(class=" py-2 border border-gray-300" type="password" name="password" style="border-radius: .4rem;")
                    div.flex.flex-col.align-center
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="rPassword") Repeat Password 
                        input#rPassword(class=" py-2 border rounded border-gray-300 " type="password" name="rPassword" style="border-radius: .4rem; box-shadow: 0;")

                    div.flex.items-center.justify-between 
                        a.text-gray-400.text-sm.no-underline(href="/auth/login" ) You have an account? Login here
                        a.text-gray-400.text-sm.no-underline(href="/auth/password-forgot") Forgot password

                    input(class="m-auto w-full p-3 bg-indigo-500 text-white font-bold cursor-pointer border-none" type="submit" value="Create Account")